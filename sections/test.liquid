<div class="test-section">
    <h1 style="color:{{ section.settings.test-color }}; text-align:{{section.settings.test-allign
                }}">
        Test Section
    </h1>
</div>

{% schema %}

{
    "name": "Test Section",
    "settings": [
        {
            "id": "test-color",
            "type": "color",
            "label": "Color",
            "default": "#000"
        }, {
            "id": "test-allign",
            "type": "select",
            "label": "Alignment",
            "default": "center",
            "options": [
                {
                    "value": "left",
                    "label": "left"
                }, {
                    "value": "center",
                    "label": "Center"
                }, {
                    "value": "right",
                    "label": "right"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "custom-text",
            "category": "Custom"
        }
    ]
}

{% endschema %}
{% stylesheet %}

.test-section h1 {
    color: section.settings.test-color;
    align: section.settings.test-allign
}

{% endstylesheet %}
